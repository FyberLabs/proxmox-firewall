---
# Example inventory file for multi-site deployment
# Copy this file to hosts.yml and modify as needed

all:
  children:
    # Group for all firewalls
    firewalls:
      children:
        # Each site should have its own group
        # The group name should match the site_name in the configuration
        primary:
          hosts:
            primary_firewall:
              ansible_host: "{{ lookup('env', 'PRIMARY_PROXMOX_HOST') }}"
              ansible_user: root

        secondary:
          hosts:
            secondary_firewall:
              ansible_host: "{{ lookup('env', 'SECONDARY_PROXMOX_HOST') }}"
              ansible_user: root

        # Add additional sites as needed following the same pattern
        # site_name:
        #   hosts:
        #     site_name_firewall:
        #       ansible_host: "{{ lookup('env', 'SITE_NAME_PROXMOX_HOST') }}"
        #       ansible_user: root

  # Variables applied to all hosts
  vars:
    ansible_python_interpreter: /usr/bin/python3
    ansible_ssh_private_key_file: "{{ lookup('env', 'ANSIBLE_SSH_PRIVATE_KEY_FILE') }}"
