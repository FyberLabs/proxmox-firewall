# Example variable values - create a copy named terraform.tfvars or <site>.tfvars for each site
proxmox_host = "proxmox.example.com"

# These secrets should be sourced from .env file or environment variables
# proxmox_api_secret = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
# tailscale_auth_key = "tskey-xxxxxxxxxxxxxxx"

# Per-site configuration
site_name = "primary"  # Short name (primary, secondary, etc.)
site_display_name = "Primary Home"
network_prefix = "10.1"  # Change for each site (10.1, 10.2, etc.)
domain = "primary.local"

# Common configuration
timezone = "America/New_York"
target_node = "pve"
